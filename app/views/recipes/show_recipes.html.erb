<table>
  <tbody>
  <% if @recipes.blank? %>
      <h4>There are no recipes containing the term <%= params[:search] %>.</h4>
  <% else %>
      <table>
        <tr>
          <th>Recipes found</th>
        </tr>
        <% @recipes.each do |item|%>
            <tr>
              <td>
                <%= link_to item.title, item %>
              </td>
            </tr>
        <% end %>
      </table>
  <% end %>
  </tbody>
</table>